:root {
  --bg: #020617;
  --bg-card: #020617;
  --border-subtle: #1f2937;
  --accent: #3b82f6;
  --accent-soft: rgba(59, 130, 246, 0.12);
  --text-main: #e5e7eb;
  --text-muted: #9ca3af;
  --radius-xl: 1.25rem;
}

* {
  box-sizing: border-box;
}

body {
  margin: 0;
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: stretch;
  font-family: "Inter", system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
    sans-serif;
  background: radial-gradient(circle at top, #1e293b 0, #020617 45%, #000 100%);
  color: var(--text-main);
}

.page {
  width: 100%;
  max-width: 1040px;
  padding: 32px 16px 40px;
}

.logo-link {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  font-weight: 600;
  color: var(--text-main);
  text-decoration: none;
  font-size: 1.1rem;
  margin-bottom: 24px;
}

.logo-dot {
  width: 10px;
  height: 10px;
  border-radius: 999px;
  background: linear-gradient(135deg, #22c55e, #3b82f6);
}

.layout {
  display: grid;
  grid-template-columns: minmax(0, 1.2fr) minmax(0, 1fr);
  gap: 28px;
}

@media (max-width: 840px) {
  .layout {
    grid-template-columns: minmax(0, 1fr);
  }
}

.pitch {
  padding: 24px 24px 28px;
  border-radius: var(--radius-xl);
  border: 1px solid var(--border-subtle);
  background:
    radial-gradient(circle at top left, rgba(59, 130, 246, 0.18), transparent 55%),
    radial-gradient(circle at bottom right, rgba(34, 197, 94, 0.08), transparent 55%),
    var(--bg-card);
}

.pitch-title {
  font-size: 1.8rem;
  font-weight: 700;
  margin: 0 0 8px;
}

.pitch-subtitle {
  margin: 0 0 20px;
  color: var(--text-muted);
  font-size: 0.95rem;
}

.pitch-grid {
  display: grid;
  grid-template-columns: minmax(0, 1fr);
  gap: 16px;
}

.pitch-item {
  padding: 12px 12px 12px 12px;
  border-radius: 0.9rem;
  background: rgba(15, 23, 42, 0.9);
  border: 1px solid rgba(51, 65, 85, 0.8);
}

.pitch-item h3 {
  margin: 0 0 4px;
  font-size: 0.95rem;
  font-weight: 600;
}

.pitch-item p {
  margin: 0;
  color: var(--text-muted);
  font-size: 0.82rem;
  line-height: 1.4;
}

.badge-premium {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  font-size: 0.78rem;
  padding: 4px 9px;
  border-radius: 999px;
  background: var(--accent-soft);
  color: #bfdbfe;
  margin-top: 6px;
}

.badge-dot {
  width: 6px;
  height: 6px;
  border-radius: 999px;
  background: var(--accent);
}

.card {
  padding: 24px 22px 26px;
  border-radius: var(--radius-xl);
  border: 1px solid var(--border-subtle);
  background: rgba(15, 23, 42, 0.96);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.6);
}

.card h2 {
  margin: 0 0 4px;
  font-size: 1.4rem;
}

.card p {
  margin: 0 0 18px;
  color: var(--text-muted);
  font-size: 0.9rem;
}

form {
  display: flex;
  flex-direction: column;
  gap: 14px;
}

.field {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

label {
  font-size: 0.86rem;
  font-weight: 500;
  display: flex;
  justify-content: space-between;
}

input {
  border-radius: 0.7rem;
  border: 1px solid #374151;
  background: #020617;
  padding: 9px 11px;
  font-size: 0.9rem;
  color: var(--text-main);
  outline: none;
  transition: border-color 0.15s ease, box-shadow 0.15s ease, background 0.15s ease;
}

input::placeholder {
  color: #6b7280;
}

input:focus {
  border-color: var(--accent);
  box-shadow: 0 0 0 1px rgba(59, 130, 246, 0.4);
  background: #020617;
}

.password-row {
  display: flex;
  align-items: center;
  gap: 8px;
}

.password-row input {
  flex: 1;
}

.toggle-password {
  padding: 7px 10px;
  border-radius: 999px;
  border: 1px solid #4b5563;
  background: #020617;
  color: #e5e7eb;
  font-size: 0.78rem;
  cursor: pointer;
  white-space: nowrap;
}

.toggle-password:hover {
  border-color: var(--accent);
}

.actions {
  margin-top: 8px;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.primary-btn {
  border: none;
  border-radius: 999px;
  padding: 10px 14px;
  font-size: 0.95rem;
  font-weight: 600;
  background: linear-gradient(135deg, var(--brand-a), var(--brand-b));
  color: #0b1120;
  cursor: pointer;
  display: inline-flex;
  justify-content: center;
  align-items: center;
}

.primary-btn:hover {
  filter: brightness(1.05);
}

.subtext {
  font-size: 0.83rem;
  color: var(--text-muted);
}

.subtext a {
  color: #93c5fd;
  text-decoration: none;
}

.subtext a:hover {
  text-decoration: underline;
}

footer {
  margin-top: 18px;
  font-size: 0.8rem;
  color: #4b5563;
  text-align: center;
}
