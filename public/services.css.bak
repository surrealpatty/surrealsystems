/* ---------- Global ---------- */
*,
*::before,
*::after {
  box-sizing: border-box;
} /* critical to prevent overflow */

html,
body {
  margin: 0;
  padding: 0;
  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  background: linear-gradient(135deg, #4e54c8, #00aaff);
  color: #fff;
  min-height: 100%;
}

/* ---------- Visually Hidden ---------- */
.sr-only {
  position: absolute !important;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 1px, 1px);
  clip-path: inset(50%);
  white-space: nowrap;
  border: 0;
}

/* ---------- Container ---------- */
.container {
  max-width: 900px;
  width: 90%;
  padding: 2.5rem 2rem;
  margin: 50px auto;
  display: flex;
  flex-direction: column;
  gap: 1.25rem;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16px;
  box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
  color: #333;
  text-align: center;
}

/* ---------- Headings ---------- */
h1 {
  color: #4e54c8;
  margin: 0 0 0.25rem;
}
.subtle {
  color: #666;
  margin: 0;
}

/* ---------- Controls ---------- */
.controls {
  display: flex;
  gap: 10px;
  justify-content: center;
  flex-wrap: wrap;
  margin-top: 0.5rem;
}
.controls input,
.controls select {
  padding: 10px;
  border-radius: 8px;
  border: 1px solid #ccc;
  font-size: 1rem;
}
.controls input {
  width: 260px;
}

/* ---------- Actions rows ---------- */
.actions-row {
  display: flex;
  gap: 10px;
  justify-content: center;
}

/* ---------- projects Grid ---------- */
#projects-list {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
  margin-top: 0.5rem;
}

/* ---------- project Card ---------- */
.project-card {
  background: #fff;
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  transition: transform 0.2s;
  color: #333;
  text-align: left;
}
.project-card:hover {
  transform: translateY(-5px);
}
.project-card h3 {
  margin: 0 0 8px;
  color: #4e54c8;
}
.project-card p {
  margin: 6px 0;
  color: #555;
}
.project-card .username {
  font-style: italic;
  color: #888;
}

/* Small layout tune for the message button */
.card-actions {
  margin-top: 10px;
}

/* ---------- Buttons ---------- */
button {
  padding: 12px 25px;
  font-size: 1rem;
  color: #fff;
  background-color: #4e54c8;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  margin-top: 10px;
  transition: 0.3s;
}
button:hover {
  background-color: #3b40a1;
}
.button-secondary {
  background-color: #17a2b8;
}
.button-secondary:hover {
  background-color: #137e8c;
}
button[disabled] {
  opacity: 0.6;
  cursor: not-allowed;
}

/* ---------- Spinner ---------- */
.spinner {
  display: inline-block;
  width: 20px;
  height: 20px;
  border: 3px solid #ccc;
  border-top-color: #4e54c8;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}
@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* ---------- Modal ---------- */
#messageModal {
  display: none;
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.5);
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

/* Clamp width, round corners, and clip any overflow from extensions */
.modal-content {
  background: #fff;
  color: #333;
  padding: 20px;
  border-radius: 16px;
  width: min(90vw, 520px);
  max-width: 520px;
  display: flex;
  flex-direction: column;
  gap: 10px;
  overflow: hidden; /* clips Grammarly/extension badges */
  box-shadow: 0 12px 30px rgba(0, 0, 0, 0.25);
}

.modal-actions {
  display: flex;
  gap: 8px;
  justify-content: flex-end;
}
.modal-meta {
  display: flex;
  justify-content: flex-end;
  font-size: 0.9rem;
  color: #666;
}

/* Wrap to keep injected siblings contained (defensive) */
.field-wrap {
  position: relative;
  width: 100%;
}

/* The crucial bits: keep textarea inside the modal */
#messageContent {
  display: block;
  width: 100%;
  max-width: 100%;
  padding: 10px;
  padding-right: 56px; /* space for extension badges */
  border-radius: 12px;
  border: 1px solid #ccc;
  resize: vertical;
  min-height: 120px;
  font-size: 1rem;
  box-sizing: border-box;
}

/* Inline error beneath the textarea */
.error-inline {
  margin: 4px 2px 0;
  color: #b00020;
  font-size: 0.9rem;
}

/* ---------- Toast ---------- */
#toast {
  position: fixed;
  left: 50%;
  bottom: 24px;
  transform: translateX(-50%);
  background: rgba(51, 51, 51, 0.95);
  color: #fff;
  padding: 10px 14px;
  border-radius: 8px;
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
  opacity: 0;
  pointer-events: none;
  transition:
    opacity 0.25s,
    transform 0.25s;
  z-index: 10000;
  max-width: 80vw;
  font-size: 0.95rem;
}
#toast.show {
  opacity: 1;
  transform: translateX(-50%) translateY(-6px);
}

/* ---------- Responsive ---------- */
@media (max-width: 480px) {
  .container {
    padding: 2rem 1rem;
  }
}
/* Attempt list (moved from inline style) */
.attempt-list {
  margin: 6px 0 0 18px;
}
